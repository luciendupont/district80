{% extends 'base.html.twig' %}

{% block title %}plat
{% endblock %}

{% block body %}


	<div class="container">
		<div class="row-center">
			{% for plat in plats %}
				<div class="col-4">
					<div class="card border-dark mb-3 mt-4">
						<div class="card-header">{{plat.libelle}}</div>
						<div class="card-body">
							<img src="/images_the_district/food/{{plat.image}}" width="200">
							<h4 class="card-title">
								<a href="{{ path('app_detailplat',{plat:plat.id}) }}" class="btn btn-dark mt-4">detail</a>
						</div>
					</div>
				</div>	
            {% endfor %}
		</div>
	</div>
	<div class="navigation d-flex justify-content-center mt-4">
		{{ knp_pagination_render(plats) }}
	</div>


	{% endblock %}
